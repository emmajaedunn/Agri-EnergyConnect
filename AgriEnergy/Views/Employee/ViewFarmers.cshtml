@model IEnumerable<AgriEnergy.Models.Farmer>

@{
    ViewData["Title"] = "View Farmers";
}

<div class="container py-5">
    <h2 class="text-success mb-4 text-center">Farmers List</h2>

    <div class="d-flex justify-content-end mb-4">
        <a asp-action="EmployeeDashboard" class="btn btn-outline-success btn-sm rounded-pill px-3 py-1">
            Return to Dashboard
        </a>
    </div>

    <div class="d-flex justify-content-start align-items-end gap-3 mb-3">
        <form method="get" asp-action="ViewFarmers" asp-controller="Employee" class="d-flex gap-3">
            <div class="p-2" style="background:#f5f5f5; border-radius:4px; border:1px solid #ddd;">
                <input type="text" name="categoryFilter" value="@Context.Request.Query["categoryFilter"]" class="bare-input" placeholder="Enter product category" />
            </div>

            <div class="p-2" style="background:#f5f5f5; border-radius:4px; border:1px solid #ddd;">
                <input type="date" name="productionDate"
                       value="@(Context.Request.Query["productionDate"].ToString())"
                       class="bare-input" placeholder="Select production date" />
            </div>

            <button type="submit" class="btn btn-success btn-sm rounded-pill px-3 py-1">Apply</button>
            <a href="@Url.Action("ViewFarmers", "Employee")" class="btn btn-success btn-sm rounded-pill px-3 py-1">Clear</a>
        </form>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">No farmers found.</div>
    }
    else
    {
        @foreach (var farmer in Model)
        {
            <div class="mb-4 p-4 shadow-sm rounded border" style="background-color: #f9f9f9;">
                <h4 class="mb-3 text-primary">@farmer.FullName</h4>
                <p><strong>Contact:</strong> @farmer.ContactNumber</p>
                <p><strong>Email:</strong> @farmer.Email</p>
                <p><strong>Location:</strong> @farmer.Location</p>

                <hr style="border-top: 2px solid #198754; margin-top: 1rem; margin-bottom: 1rem;" />
                <strong class="d-block mb-3" style="font-size:1.1rem;">Products:</strong>

                @if (farmer.Products != null && farmer.Products.Any())
                {
                    int productNumber = 1;
                    foreach (var product in farmer.Products)
                    {
                        <div class="mb-3 p-3 border rounded" style="background-color: #ffffff;">
                            <p class="mb-1"><strong>Product @productNumber:</strong></p>
                            <p class="mb-1"><strong>Name:</strong> @product.ProductName</p>
                            <p class="mb-1"><strong>Category:</strong> @product.ProductCategory</p>
                            <p class="mb-0"><strong>Production Date:</strong> @product.ProductionDate.ToString("yyyy-MM-dd")</p>
                        </div>
                        productNumber++;
                    }
                }
                else
                {
                    <p class="fst-italic text-muted">No products added yet.</p>
                }

            </div>
        }
    }
</div>





































