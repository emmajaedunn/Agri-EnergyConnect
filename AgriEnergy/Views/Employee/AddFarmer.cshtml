@model AgriEnergy.Models.Farmer
@{
    ViewData["Title"] = "Add Farmer";
    ViewData["BodyClass"] = "add-farmer";
}

@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">
        @ViewData["SuccessMessage"]
        <div class="mt-3">
            <a asp-action="EmployeeDashboard" class="btn btn-outline-success">Return to Dashboard</a>
        </div>
    </div>
}

<div class="container py-5">
    <h2 class="text-center text-success mb-5">Add New Farmer</h2>
    <p class="lead text-center mb-5">Fill in the essential details below to add a new farmer into the Agri-Energy platform.</p>

    <div class="d-flex justify-content-end mb-4">
        <a asp-action="EmployeeDashboard" class="btn btn-outline-success btn-sm rounded-pill px-3 py-1">
            Return to Dashboard
        </a>
    </div>

    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
    }

    <form asp-action="AddFarmer" method="post" asp-antiforgery="true"  class="p-4 bg-white border rounded shadow-sm mx-auto" style="max-width: 600px;">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="FullName" class="form-label">Full Name</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ContactNumber" class="form-label">Phone Number</label>
            <input asp-for="ContactNumber" class="form-control" />
            <span asp-validation-for="ContactNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Location" class="form-label">Location</label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-success btn-lg rounded-pill shadow-sm">Add Farmer</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
