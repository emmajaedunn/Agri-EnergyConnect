@model AgriEnergy.Models.Product
@{
    ViewData["Title"] = "Add Product";
}


<div class="container py-5">
    <h2 class="text-center text-success mb-5">Add New Product</h2>
    <p class="lead text-center mb-5">Fill in the essential details below to add a new product into the Agri-Energy platform.</p>

    <div class="d-flex justify-content-end mb-4">
        <a asp-action="FarmerDashboard" class="btn btn-outline-success btn-sm rounded-pill px-3 py-1">
            Return to Dashboard
        </a>
    </div>

    @if (TempData["SuccessMessage"] is string successMessage)
    {
        <div class="alert alert-success text-center">
            @successMessage
            <div class="mt-3">
                <a asp-action="FarmerDashboard" class="btn btn-outline-success">Return to Dashboard</a>
            </div>
        </div>
    }

    <form asp-action="AddProduct" method="post" class="p-4 bg-white border rounded shadow-sm mx-auto" style="max-width: 600px;">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="ProductName" class="form-label">Product Name</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProductCategory" class="form-label">Product Category</label>
            <input asp-for="ProductCategory" class="form-control" />
            <span asp-validation-for="ProductCategory" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProductionDate" class="form-label">Production Date</label>
            <input asp-for="ProductionDate" type="date" class="form-control" />
            <span asp-validation-for="ProductionDate" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-success">Add Product</button>
    
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




